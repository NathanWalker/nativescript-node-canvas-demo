{

    "compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noEmitHelpers": true,
		"noEmitOnError": false,
		"allowJs": true,
		"importHelpers": true,
		"lib": ["ESNext", "dom"],
		"noEmit": false,
		"rootDir": ".",
		"target": "ES2020",
		"downlevelIteration": true
	},
    "extends": "@tsconfig/node22/tsconfig.json",
	"exclude": ["node_modules"]
}
